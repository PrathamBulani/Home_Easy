<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainFragment"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_page2"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:textStyle="normal"

                android:text="Choose Account Type"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/shopkepper"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="150dp">

                <ImageView
                    android:background="@color/white"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/shopkeeper"

                    />
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="150dp"
                    android:text="Register as Shopkeeper"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:fontFamily="@font/sunday"/>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/white"
                android:id="@+id/customer"

                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="150dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:background="@color/white"
                    android:src="@drawable/customer" />
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="150dp"
                    android:text="Register as Customer"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:fontFamily="@font/sunday"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="425dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="15dp"
                    android:src="@mipmap/ic_mail">

                </ImageView>
            </LinearLayout>

            <EditText

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="425dp"
                android:hint="Email"
                android:textColorHint="@color/black"

                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="497dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pass"
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/ic_pass" />

                <EditText
                    android:id="@+id/password_edit_txt"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="25dp"
                    android:hint="Password"
                    android:textColorHint="@color/black"
                    android:textSize="25dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"

                android:layout_marginStart="50dp"
                android:layout_marginTop="575dp"

                android:layout_marginEnd="50dp"
                android:text="No account? Register Up"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/signup"
                android:layout_centerInParent="true"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/design"
                android:gravity="center"
                android:text="Login"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </FrameLayout>
</layout>